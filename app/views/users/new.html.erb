<h1>Inscription</h1>

<%= form_tag url_for(action: 'create'), method: 'post', class: 'mx-2' do %>
  <div class="form-row my-2">
    <div class="col my-2">
      <%= label_tag 'user[first_name]', 'Vos informations personnelles' %>
      <%= text_field_tag 'user[first_name]', nil, class: 'form-control', placeholder: 'Prénom' %>
    </div>
    <div class="col my-2">
      <%= text_field_tag 'user[last_name]', nil, class: 'form-control', placeholder: 'Nom' %>
    </div>
  </div>

  <div class="form-group my-2">
    <%= email_field_tag 'user[email]', nil, class: 'form-control', placeholder: 'Entrez votre adresse email' %>
    <small id="emailHelp" class="form-text text-muted">Nous ne partagerons jamais votre adresse e-mail avec personne d'autre.</small>
  </div>

  <div class="form-group my-2">
    <%= label_tag 'user[password]', 'Définissez votre mot de passe' %>
    <%= password_field_tag 'user[password]', nil, class: 'form-control', placeholder: 'Mot de passe' %>
  </div>

  <div class="form-group my-2">
    <%= password_field_tag 'user[password_confirmation]', nil, class: 'form-control', placeholder: 'Confirmer le mot de passe' %>
  </div>

  <div class="field my-2">
    <%= label_tag :remember_me, 'Se souvenir de moi' %>
    <%= check_box_tag :remember_me %>
  </div>

  <%= submit_tag 'Valider', class: 'btn btn-primary my-2' %>
  <small id="already_member" class="form-text text-muted my-2">
    <%= link_to 'Déjà membre', new_session_path %>
  </small>
<% end %>



