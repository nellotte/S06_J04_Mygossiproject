<!-- bloc index des gossips -->

<div class="container-fluid">
  <div class="row row-cols-1 row-cols-md-3 g-4">
    <% Gossip.all.each do |gossip| %>
      <div class="col">
        <div class="card h-75">
          <div class="card-body">
            <h5 class="card-title"><%= gossip.title %></h5>
             <%= "#{gossip.content.split[0, 20].join(' ')}..." %> <%# Divise en mots, puis affiche les 20 premiers mots et "..." %>
            <%= link_to 'Lire la suite', gossip_path(gossip.id), class: 'btn btn-outline-primary' %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

